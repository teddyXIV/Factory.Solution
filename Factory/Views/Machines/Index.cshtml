@using Factory.Models;

<div class=content>
    <h2 class=page-title>Machines</h2>

    @if (@Model.Count == 0)
    {
        <h4>No machines have been installed.</h4>
    }

    <div class=machine-list>
        @foreach (Machine m in Model)
        {
            @Html.ActionLink($"{m.Name}", "Details", new { id = m.MachineId })
        }
    </div>

    @Html.ActionLink("Add a new machine", "Create", "Machines", null, new { @class = "button" })
</div>