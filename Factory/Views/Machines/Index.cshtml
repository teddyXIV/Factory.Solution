@using Factory.Models;

<div class=content>
    <div class=index-header>
        <h2 class=page-title>Machines</h2>
        @Html.ActionLink("Add a new machine", "Create")
    </div>

    @if (@Model.Count == 0)
    {
        <h4>No machines have been installed.</h4>
    }

    <div class=machine-list>
        @foreach (Machine m in Model)
        {
            @Html.ActionLink($"{m.Name}", "Details", new { id = m.MachineId })
        }
    </div>

    @* @Html.ActionLink("Add a new machine", "Create", "Machines", null, new { @class = "form-button" }) *@
</div>