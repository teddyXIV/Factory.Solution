@model Factory.Models.Machine

<h2>Add a new machine</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Purpose, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Purpose)
    @Html.TextBoxFor(model => model.Purpose)
    <input type="submit" value="Add machine" />
}

@Html.ActionLink("Show all machines", "Index")