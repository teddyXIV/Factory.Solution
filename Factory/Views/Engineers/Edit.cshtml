@model Factory.Models.Engineer

<div class=content>
    <h2>Update info for @Model.Name</h2>

    @using (Html.BeginForm())
    {
        <div class=form-layout>
            @Html.HiddenFor(model => model.EngineerId)
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.LabelFor(model => model.Specialty)
            @Html.EditorFor(model => model.Specialty)
            <input class=form-button type="submit" value="Update" />
        </div>
    }

    @Html.ActionLink("Back to engineer list", "Index")
</div>